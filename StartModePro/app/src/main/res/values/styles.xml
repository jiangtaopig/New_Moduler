<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeWelcome" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">#DCDCDC</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:buttonStyle">@android:style/Widget.Button.Small</item>
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:buttonStyle">@android:style/Widget.Button.Small</item>
    </style>

    <style name="AppTheme2" parent="BaseTheme">
        <item name="colorPrimary">#249FE6</item>
        <item name="colorPrimaryDark">#DCDCDC</item>
        <item name="colorAccent">#249FE6</item>
        <item name="android:windowBackground">#ffffff</item>
    </style>

</resources>