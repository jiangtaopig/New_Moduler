<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_f2f9ff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/test_pop_window3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_30dp"
            android:layout_marginTop="@dimen/dimen_100dp"
            android:background="@color/color_333333"
            android:padding="@dimen/dimen_10dp"
            android:text="pop"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/test_pop_window"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_200dp"
                android:background="@color/color_333333"
                android:padding="@dimen/dimen_10dp"
                android:text="Test pop window"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/test_pop_window2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_60dp"
                android:layout_marginTop="@dimen/dimen_200dp"
                android:background="@color/color_333333"
                android:padding="@dimen/dimen_10dp"
                android:text="Test pop fff window2"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>