<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_rx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:padding="16dp"
        android:background="@color/colorAccent"/>

    <TextView
        android:id="@+id/txt_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to user"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"/>


    <com.zjt.startmodepro.widget.RangeSeekBar
        android:id="@+id/range_seek_bar"
        android:background="#881122"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:text_color="#1B97F7"
        app:button_img="@drawable/seek_button"
        app:button_height="10dp"
        app:button_width="10dp"
        app:bg_color="#ffffff"
        app:value_color="#fb7299"
        app:seek_height="2dp"
        />

    <com.zjt.startmodepro.widget.BitmapView
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#666666"/>

</LinearLayout>